          "mode": "raw",
          "raw": "{\n  \"title\": \"Team Meeting\",\n  \"startTime\": \"2025-08-05T14:00:00Z\",\n  \"endTime\": \"2025-08-05T15:00:00Z\",\n  \"recurrence\": \"none\",\n  \"reminderMinutes\": 30\n}"
        },
        "url": { "raw": "http://localhost:3000/events", "host": ["localhost"], "port": "3000", "path": ["events"] }
      }
